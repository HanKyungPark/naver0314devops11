package day0315;

import java.util.Scanner;

public class Test0317 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc= new Scanner (System.in);
		int temperature;
		String clothingAdvice;
		System.out.println("현재 영은이 마음속 온도는?");
		temperature=sc.nextInt();
		clothingAdvice= temperature >= 25 ? "반팔을 추천드립니다!" :
			temperature >= 15 ? "긴팔을 추천드립니다!" :
				temperature >= 5 ? "자켓을 추천드립니다!" : "까불지말고 코트 입어라!";
			
					
				System.out.println(temperature + "=>" + clothingAdvice);
	}

}
